VULNERABILITY_SCANNER_REPORT_DIR=reports/vulnerability_scans

# Threat Monitor Configuration
THREAT_MONITOR_LOG_FILE_PATH=/var/log/hermod/hermod.log
THREAT_MONITOR_NETWORK_INTERFACE=eth0
THREAT_MONITOR_FETCH_INTERVAL=60# in seconds
THREAT_MONITOR_HISTORICAL_DATA_PATH=data/historical_logs.csv

# Stress Tester Configuration
STRESS_TESTER_TARGETS_FILE=stress_test_targets.json
JMETR_TEST_PLAN=jmeter_test_plans/resource_intensive_test.jmx
