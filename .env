# Threat Intelligence Configuration
THREAT_INTELLIGENCE_FETCH_INTERVAL=3600# in seconds
THREAT_INTELLIGENCE_SOURCES_FILE=threat_intelligence_sources.json

# Security Amplifier Configuration
SECURITY_AMPLIFIER_TARGETS_FILE=security_amplifier_targets.json
